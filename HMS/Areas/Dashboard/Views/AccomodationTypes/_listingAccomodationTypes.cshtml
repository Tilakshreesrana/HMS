@model HMS.Areas.Dashboard.ViewModels.AccomodationTypesViewModel
@if (Model != null && Model.accomodationTypes!=null && Model.accomodationTypes.Count()>0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var accomodationType in Model.accomodationTypes)
            {
                <tr>
                  
                    <td>@accomodationType.Name</td>
                    <td>@accomodationType.Description</td>
                    <td>
                        <button type="button" data-href="@Url.Action("Action", "AccomodationTypes", new { ID = accomodationType.ID })" class="action-btn btn btn-primary" data-toggle="modal" data-target="#actionModal"><i class="fas fa-edit mr-1"></i>Edit</button>
                        <button type="button" data-href="@Url.Action("Delete", "AccomodationTypes", new { ID = accomodationType.ID })" class="action-btn btn btn-danger"  data-toggle="modal" data-target="#actionModal"><i class="fas fa-trash-alt mr-1"></i>Delete</button>
                    </td>
                </tr>

            }

           
        </tbody>
    </table>

}
else
{
    <div class="alert alert-warning" role="alert">
        Sorry! no records exists!!
    </div>
}