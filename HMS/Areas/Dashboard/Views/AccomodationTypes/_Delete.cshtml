<div class="modal-content">
    <div class="modal-header">
        <h5 class="modal-title">Delete Accomodation Type</h5>

        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">

        <div class="alert alert-danger" role="alert">
            Are you sure you want to delete?
        </div>
    </div>
    <div class="modal-footer">
        <button id="actionBtn" type="button" class="btn btn-danger"><i class="fas fa-trash-alt mr-1"></i>Delete</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal"><i class="fas fa-window-close mr-1"></i>Close</button>

    </div>
</div>
<script>
 $("#actionBtn").click(function () {
         $.ajax({
             url: '@Url.Action("Delete", "AccomodationTypes")',
            type: "post",
            data: $("#actionForm").serialize()
            })
            .done(function (response) {
                if (response) {
                    window.location.href="@Url.Action("Index", "AccomodationTypes")";
            }
            else {
            $(".errorDiv").html(response.Message);
            }
            })

            })
</script>